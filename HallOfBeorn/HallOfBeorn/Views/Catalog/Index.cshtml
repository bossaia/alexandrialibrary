@using HallOfBeorn.Models
@model List<Card>

@{
    ViewBag.Title = "Catalog";
}

<h2>Catalog</h2>

<form method="post" action="">
    <fieldset>
        <input type="text" name="Text" maxlength="100" />
        <input type="submit" value="Search" />
    </fieldset>
</form>

@foreach (var card in @Model)
{
    <section>
        <header>
            <h3>@card.Title</h3>
        </header>
        <p>
            @card.Text
        </p>
    </section>
}