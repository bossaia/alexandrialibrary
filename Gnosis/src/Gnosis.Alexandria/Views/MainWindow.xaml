<Window x:Class="Gnosis.Alexandria.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Gnosis.Alexandria"
        xmlns:views="clr-namespace:Gnosis.Alexandria.Views"
        xmlns:converters="clr-namespace:Gnosis.Alexandria.Converters"
        Title="Alexandria" Height="640" Width="768" Icon="pack://application:,,,/Images/pyramid.png">
    <Window.Resources>
        <converters:ImageSourceConverter x:Key="imageConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="68"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <views:PlaybackView x:Name="playbackView" Grid.Row="0"/>
        <views:SearchView x:Name="searchView" Grid.Row="1"/>
        <Grid x:Name="ContentGrid" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <views:SourceView x:Name="sourceView" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" />
            <Grid x:Name="TrackGrid" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" Grid.Row="0" x:Name="TrackPropertiesBorder" Visibility="Collapsed">
                    <Expander x:Name="TrackProperties">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <Button x:Name="ChangePictureButton" Click="ChangePictureButton_Click">
                                    <Image Source="{Binding Path=ImageSource, Converter={StaticResource imageConverter}, NotifyOnTargetUpdated=True}" Height="100" Width="100"/>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Text="{Binding TrackNumber}" FontSize="12" Margin="4 0 4 0"/>
                                    <TextBox Text="{Binding Title}" FontSize="12" Margin="4 0 4 0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="from" Foreground="Gray"/>
                                    <TextBox Text="{Binding Album}" FontSize="12" Margin="4 0 4 0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="by" Foreground="Gray"/>
                                    <TextBox Text="{Binding Artist}" FontSize="12" Margin="4 0 4 0"/>
                                    <TextBlock Text="in" Foreground="Gray"/>
                                    <TextBox Text="{Binding ReleaseYear}" FontSize="12" Margin="4 0 4 0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Country" Foreground="Gray"/>
                                    <TextBox Text="{Binding Country}" FontSize="12" Margin="4 0 4 0"/>
                                    <Image Source="{Binding CountryImagePath}" Margin="4"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Grouping" Foreground="Gray"/>
                                    <TextBox Text="{Binding Grouping}" FontSize="12" Margin="4 0 4 0" Width="100"/>
                                    <TextBlock Text="Comment" Foreground="Gray"/>
                                    <TextBox Text="{Binding Comment}" FontSize="12" Margin="4 0 4 0" Width="200"/>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Lyrics" Foreground="Gray"/>
                                    <TextBox Text="{Binding Lyrics}" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="50" Width="400" HorizontalAlignment="Left"/>
                                </StackPanel>
                                <Button x:Name="SaveTrackPropertiesButton" Width="60" Click="SaveTrackPropertiesButton_Click">Save</Button>
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </Border>
                <ListView Grid.Row="1" x:Name="TrackView" SelectionChanged="TrackListView_SelectionChanged" MouseDoubleClick="TrackListView_MouseDoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="3 3 3 3">
                                <StackPanel Orientation="Horizontal">
                                    <Image x:Name="ItemImage" Source="{Binding Path=ImageSource, Converter={StaticResource imageConverter}, NotifyOnTargetUpdated=True}" AllowDrop="True" Drop="ItemImage_Drop" Width="50" Height="50">
                                        <Image.ContextMenu>
                                            <ContextMenu x:Name="ItemImageContentMenu">
                                                <MenuItem x:Name="ItemImageCopy" Header="Copy" Click="ItemImageCopy_Click"/>
                                                <MenuItem x:Name="ItemImagePaste" Header="Paste" Click="ItemImagePaste_Click"/>
                                            </ContextMenu>
                                        </Image.ContextMenu>
                                    </Image>
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock x:Name="TrackNumber" Text="{Binding TrackNumber}" Margin="4 0 6 0" FontSize="10"/>
                                            <TextBlock x:Name="TrackTitle" Text="{Binding Title}" Margin="4 0 0 0"/>
                                            <TextBlock x:Name="TrackPlaybackStatus" Text="{Binding PlaybackStatus}" Margin="6 4 0 0" Foreground="Blue" FontFamily="Impact" FontSize="10"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="by" Margin="2 2 2 0" FontSize="10" Foreground="Gray"/>
                                            <TextBlock x:Name="TrackArtist" Text="{Binding Artist}" Margin="4 0 0 0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="from" Margin="2 2 2 0" FontSize="10" Foreground="Gray"/>
                                            <TextBlock x:Name="TrackAlbum" Text="{Binding Album}" Margin="4 0 0 0"/>
                                            <TextBlock Text="released" Margin="4 2 4 0" FontSize="10" Foreground="Gray"/>
                                            <TextBlock x:Name="TrackReleaseYear" Text="{Binding ReleaseYear}"/>
                                            <TextBlock Text="in" Margin="4 2 4 0" FontSize="10" Foreground="Gray"/>
                                            <Image Source="{Binding CountryImagePath}" Margin="4 0 0 0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Resources>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TrackItem_PreviewMouseLeftButtonDown"/>
                            <EventSetter Event="MouseMove" Handler="TrackItem_MouseMove"/>
                        </Style>
                    </ListView.Resources>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Window>
