        <DataGrid AutoGenerateColumns="False" Height="242" HorizontalAlignment="Stretch" Margin="7,46,5,0" Name="gridSearch" VerticalAlignment="Stretch" TabIndex="2" IsTabStop="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" />
                <DataGridTextColumn Header="Name" />
                <DataGridTextColumn Header="From" />
                <DataGridTextColumn Header="Date" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</views:ControlView>
